{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@spotex/shared/*": ["./shared/src/*"]
    }
  },
  "include": [
    "shared/**/*",
    "backend-api/**/*",
    "auth-service/**/*",
    "deployment-service/**/*",
    "ticket-service/**/*",
    "domain-service/**/*",
    "notification-service/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/node_modules",
    "**/dist"
  ]
}
