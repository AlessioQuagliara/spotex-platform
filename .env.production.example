# ====================
# SPOTEX PLATFORM - PRODUCTION ENVIRONMENT
# ====================

NODE_ENV=production

# ====================
# DATABASE CONFIGURATION
# ====================
DATABASE_URL=postgresql://spotex_prod:${DB_PASSWORD}@production-db.spotexsrl.com:5432/spotex_platform_prod
DB_POOL_SIZE=20
DB_TIMEOUT=10000

# ====================
# KAMATERA PRODUCTION API
# ====================
KAMATERA_API_KEY=${PROD_KAMATERA_API_KEY}
KAMATERA_API_SECRET=${PROD_KAMATERA_API_SECRET}
KAMATERA_DEFAULT_REGION=EU
KAMATERA_BACKUP_ENABLED=true
KAMATERA_MONITORING_ENABLED=true

# ====================
# SSL & DOMAINS
# ====================
LETSENCRYPT_EMAIL=ssl@spotexsrl.com
DOMAIN_PROVIDER_API_KEY=${PROD_DOMAIN_PROVIDER_KEY}
SSL_AUTO_RENEWAL=true

# ====================
# JWT & AUTHENTICATION
# ====================
JWT_SECRET=${PROD_JWT_SECRET}
JWT_REFRESH_SECRET=${PROD_JWT_REFRESH_SECRET}
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ====================
# PAYMENT PROCESSING (STRIPE)
# ====================
STRIPE_SECRET_KEY=${PROD_STRIPE_SECRET_KEY}
STRIPE_WEBHOOK_SECRET=${PROD_STRIPE_WEBHOOK_SECRET}
STRIPE_PUBLISHABLE_KEY=${PROD_STRIPE_PUBLISHABLE_KEY}

# ====================
# MONITORING & LOGGING
# ====================
SENTRY_DSN=${PROD_SENTRY_DSN}
LOG_LEVEL=warn
LOG_FORMAT=json
METRICS_ENABLED=true

# ====================
# REDIS CONFIGURATION
# ====================
REDIS_URL=redis://spotex-redis-prod:6379
REDIS_PASSWORD=${PROD_REDIS_PASSWORD}
REDIS_TLS_ENABLED=true

# ====================
# EMAIL CONFIGURATION
# ====================
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=${SENDGRID_API_KEY}
SMTP_FROM=noreply@spotexsrl.com

# ====================
# BACKUP CONFIGURATION
# ====================
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=spotex-production-backups
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}

# ====================
# RATE LIMITING
# ====================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ====================
# CORS CONFIGURATION
# ====================
CORS_ORIGIN=https://admin.spotexsrl.com,https://agency.spotexsrl.com,https://app.spotexsrl.com
CORS_CREDENTIALS=true

# ====================
# PERFORMANCE
# ====================
CACHE_TTL=3600
COMPRESSION_ENABLED=true
CLUSTER_MODE=true
MAX_WORKERS=4
